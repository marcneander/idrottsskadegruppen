{
    "name": "idrottsskadegruppen",
    "version": "1.0.0",
    "description": "Idrottsskadegruppen.se",
    "scripts": {
        "_babel-js": "babel docs/js/app.js --out-file docs/js/app.js",
        "_webpack": "webpack --env.production --env.platform=web src/js/app.js docs/js/app.js",
        "_uglify": "uglifyjs --compress warnings=false --mangle --output docs/js/app.js docs/js/app.js",
        "_sass-compile": "node-sass --output-style expanded --source-map true --precision 6 src/scss/style.scss docs/css/style.css",
        "_postcss": "postcss --config postcss.config.js --replace docs/css/style.css",
        "_clean-css": "cleancss --level 1 --source-map --output docs/css/style.css docs/css/style.css",
        "_watch-js": "chokidar 'src/js/*.js' -c 'npm run js'",
        "_watch-html": "chokidar 'src/index.html' -c 'npm run html'",
        "_watch-sass": "chokidar 'src/scss/**/*.scss' -c 'npm run sass'",
        "js": "mkdir -p docs/js && npm run _webpack && npm run _babel-js && npm run _uglify",
        "sass": "npm run _sass-compile && npm run _postcss && npm run _clean-css",
        "html": "cp src/index.html docs/",
        "cname": "echo \"idrottsskadegruppen.se\" > docs/CNAME",
        "clean": "rm -rf docs",
        "build": "npm run clean && npm run js && npm run sass && npm run html && npm run cname",
        "watch": "npm run build && npm run _watch-js & npm run _watch-html & npm run _watch-sass",
        "serve": "live-server --port=8000 --host=localhost docs"
    },
    "author": "Marc Neander",
    "license": "MIT",
    "dependencies": {
        "babel-polyfill": "^6.23.0",
        "bootstrap": "4.1.3",
        "contentful": "^7.0.5",
        "jquery": "^3.2.1",
        "marked": "^0.5.1"
    },
    "devDependencies": {
        "autoprefixer": "^9.2.1",
        "babel": "^6.23.0",
        "babel-cli": "^6.24.0",
        "babel-plugin-transform-es2015-modules-strip": "^0.1.1",
        "babel-preset-es2015": "^6.24.0",
        "chokidar-cli": "^1.2.0",
        "clean-css-cli": "^4.0.10",
        "live-server": "^1.2.0",
        "node-sass": "^4.5.2",
        "postcss-cli": "^6.0.1",
        "postcss-flexbugs-fixes": "^4.1.0",
        "postcss-reporter": "^6.0.0",
        "postcss-scss": "^2.0.0",
        "uglify-js": "^3.4.9",
        "webpack": "^4.22.0"
    }
}
