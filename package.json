{
    "name": "idrottsskadegruppen",
    "version": "1.0.0",
    "description": "Idrottsskadegruppen.se",
    "scripts": {
        "_babel-js": "babel dist/js/app.js --out-file dist/js/app.js",
        "_webpack": "webpack --env.production --env.platform=web src/js/app.js dist/js/app.js",
        "_uglify": "uglifyjs --compress warnings=false --mangle --output dist/js/app.js dist/js/app.js",
        "_sass-compile": "node-sass --output-style expanded --source-map true --precision 6 src/scss/style.scss dist/css/style.css",
        "_postcss": "postcss --config postcss.config.js --replace dist/css/style.css",
        "_clean-css": "cleancss --level 1 --source-map --output dist/css/style.css dist/css/style.css",
        "_watch-js": "chokidar 'src/js/*.js' -c 'npm run js'",
        "_watch-html": "chokidar 'src/index.html' -c 'npm run html'",
        "_watch-sass": "chokidar 'src/scss/**/*.scss' -c 'npm run sass'",
        "js": "mkdir -p dist/js && npm run _webpack && npm run _babel-js && npm run _uglify",
        "sass": "npm run _sass-compile && npm run _postcss && npm run _clean-css",
        "html": "cp src/index.html dist/",
        "clean": "rm -rf dist",
        "build": "npm run clean && npm run js && npm run sass && npm run html",
        "watch": "npm run build && npm run _watch-js & npm run _watch-html & npm run _watch-sass",
        "serve": "live-server --port=8000 --host=localhost dist"
    },
    "author": "Marc Neander",
    "license": "MIT",
    "dependencies": {
        "contentful": "^4.1.2"
    },
    "devDependencies": {
        "autoprefixer": "^6.7.7",
        "babel": "^6.23.0",
        "babel-cli": "^6.24.0",
        "babel-plugin-transform-es2015-modules-strip": "^0.1.1",
        "babel-preset-es2015": "^6.24.0",
        "chokidar-cli": "^1.2.0",
        "clean-css-cli": "^4.0.10",
        "live-server": "^1.2.0",
        "node-sass": "^4.5.2",
        "postcss-cli": "^3.0.0",
        "postcss-flexbugs-fixes": "^2.1.0",
        "postcss-reporter": "^3.0.0",
        "postcss-scss": "^0.4.1",
        "uglify-js": "^2.8.21",
        "webpack": "^2.3.3"
    }
}
